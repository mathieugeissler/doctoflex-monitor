{
  "name": "doctoflex-monitor",
  "version": "1.0.0",
  "description": "Moniteur de cr√©neaux de rendez-vous Doctoflex",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:css && tsc",
    "build:css": "postcss ./src/css/tailwind.css -o ./public/css/style.css",
    "watch:css": "postcss ./src/css/tailwind.css -o ./public/css/style.css --watch",
    "start": "node dist/server.js",
    "dev": "concurrently \"ts-node-dev --require ./tsconfig-paths-bootstrap.js --respawn src/server.ts\" \"npm run watch:css\"",
    "test": "jest --coverage --testPathIgnorePatterns=test/integration",
    "test:watch": "jest --watch",
    "test:integration": "jest test/integration --no-coverage",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"statements\":90,\"branches\":90,\"functions\":90,\"lines\":90}}'",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "puppeteer": "^24.4.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.11.19",
    "@types/socket.io": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitejs/plugin-legacy": "^6.0.2",
    "autoprefixer": "^10.4.17",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.0.0",
    "node-notifier": "^10.0.1",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vite": "^6.2.3"
  }
}
